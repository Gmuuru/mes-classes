                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Hyperlink>
                  <Button mnemonicParsing="false" onAction="#changeRoot" text="Changer...">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Répertoire de stockage des données :" />
                  <Hyperlink fx:id="saveDirLabel" onAction="#openFile"  HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Hyperlink>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Répertoire de stockage des documents :" />
                  <Hyperlink fx:id="docDirLabel" onAction="#openDoc" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Hyperlink>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Répertoire de stockage des backups :" />
                  <Hyperlink fx:id="bckDirLabel" onAction="#openBck" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Hyperlink>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Répertoire de stockage des logs :" />
                  <Hyperlink fx:id="logDirLabel" onAction="#openLog" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Hyperlink>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Répertoire de stockage des properties :" />
                  <Hyperlink fx:id="propertiesDirLabel" onAction="#openProps" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Hyperlink>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Répertoire de stockage des archives :" />
                  <Hyperlink fx:id="archiveDirLabel" onAction="#openArchive" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </Hyperlink>
               </children>
            </HBox>
